{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 225,
  "title": "Carbon Monoxide Air Quality Around the World",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jdun0012/Assignment23/main/worldMap.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "params": [
        {
          "name": "AQI_Filter",
          "select": {"type": "point", "fields": ["CO_AQI_Category"]},
          "bind": {
            "input": "select",
            "options": [
              null,
              "Good",
              "Moderate",
              "Unhealthy",
              "Very Unhealthy",
              "Hazardous"
            ],
            "labels": [
              "Show All",
              "Good AQI",
              "Moderate AQI",
              "Unhealthy AQI",
              "Very Unhealthy AQI",
              "Hazardous AQI"
            ],
            "name": "CO AQI Selection: "
          }
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jdun0012/Assignment23/main/AQI%20and%20Lat%20Long%20of%20Countries.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "CO AQI Value",
          "type": "quantitative",
          "title": "Air Quality",
          "scale": {"domain": [0, 133], "range": [0, 50, 100, 133]}
        },
        "color": {
          "condition": {
            "param": "AQI_Filter",
            "title": "CO AQI Category",
            "field": "CO_AQI_Category",
            "type": "nominal",
            "scale": {
              "domain": [
                "Good",
                "Moderate",
                "Unhealthy",
                "Very Unhealthy",
                "Hazardous"
              ],
              "range": ["#42FF33", "#F0FF33", "#FF2502", "#8C0371", "#920F02"]
            }
          }
        },
        "tooltip": [
          {"field": "Country", "type": "ordinal", "title": "Country"},
          {"field": "City", "type": "ordinal", "title": "City"},
          {"field": "CO AQI Value", "type": "nominal", "title": "CO AQI Value"}
        ]
      }
    }
  ],
  "config": {}
}